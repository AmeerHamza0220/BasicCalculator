<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="5dp"
    tools:context="com.example.lablnet.basiccalculator.MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:background="@color/colorGray"
        android:textColor="@android:color/white"
        android:layout_marginTop="130dp"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:layout_margin="1dp"
            android:text="7" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            style="@style/buttonStyle"
            android:text="8" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            style="@style/buttonStyle"
            android:text="9" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            style="@style/buttonStyle"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            style="@style/buttonStyle"
            android:text="4" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:layout_margin="1dp"
            android:text="5" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:layout_margin="1dp"
            android:text="6" />

        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:layout_margin="1dp"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            style="@style/buttonStyle"
            android:text="1" />

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:text="2" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:text="3" />

        <Button
            android:id="@+id/divide"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:text="C" />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:text="0" />

        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            style="@style/buttonStyle"
            android:text="=" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_margin="1dp"
            style="@style/buttonStyle"
            android:text="*" />
    </LinearLayout>

</LinearLayout>
